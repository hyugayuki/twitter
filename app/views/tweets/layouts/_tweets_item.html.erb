<% @tweets.each do |tweet| %>
  <li class="one-tweet-content">
    <div class="user-account-info">
      <div class="icon-image" style="background-image:url(<%= tweet.user.image.tweet_item.to_s %>)">
      </div>
    </div>
    <div class="tweet-content">
      <div class="tweet-header">
        <a href="/users/<%= tweet.user.id %>">
          <span class="tweet-header_user-name"><%= tweet.user.name %></span>
          <span class="tweet-header_user-id">@<%= tweet.user.user_identifier %></span>
        </a>
        <small>ãƒ»</small>
        <small class="tweetTime"><%= tweet.created_at.strftime("%Y-%m-%d %H:%M") %></small>
        <em class="fa fa-angle-down"></em>
      </div>
      <div class="tweet-text">
        <%= simple_format(tweet.content) %>
      </div>
      <div class="tweet-footer">
        <span class="fa fa-comment-o"></span>
        <span class="fa fa-retweet"></span>
        <span class="fa fa-heart-o"></span>
        <span class="fa fa-envelope-o"></span>
      </div>
    </div>
  </li>
<% end %>
