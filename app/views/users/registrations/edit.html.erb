<div class="devise">
  <h2>ユーザー情報の変更</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label "名前(ニックネーム)" %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :アイコン %><br />
      <%= f.file_field :image %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(変更しない場合は空白)</i><br />
      <%= f.password_field :password, placeholder: "新しいパスワード", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password確認用 %><i>(変更しない場合は空白)</i><br />
      <%= f.password_field :password_confirmation, placeholder: "新しいパスワード(再入力)", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :current_password, placeholder: "現在設定中のパスワード", autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "変更を保存" %>
    </div>
  <% end %>

  <div class="shared">
    <%= link_to "　　ログアウト", destroy_user_session_path, method: :delete, class: 'btn' %>
  </div>

  <div class="shared">
    <%= link_to "　　ホームへ戻る", :back %>
  </div>

  <div class="shared">
    <p><%= button_to "アカウントを消去", registration_path(resource_name), data: { confirm: "消去してよろしいですか？" }, method: :delete %></p>
  </div>

</div>
